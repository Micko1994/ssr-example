{
  "compilerOptions": {
    "lib": ["es5", "es2015","DOM", "es2016", "es2017", "es2018", "es2019", "es2020", "esnext"],
    "target": "esnext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  }
}
